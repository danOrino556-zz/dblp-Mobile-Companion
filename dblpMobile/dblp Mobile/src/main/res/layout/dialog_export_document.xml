<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:weightSum="1"
    android:background="@drawable/grey_rounded_corners"><![CDATA[>

    ]]>

    <TextView
        android:layout_width="244dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Export Bibliography"
        android:id="@+id/shareDocumentDetailsTextView"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="#505b62"
        android:gravity="center_horizontal" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_gravity="center_horizontal"
        android:src="@android:drawable/ic_menu_set_as"
        android:background="#505b62"
        android:scaleType="center" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/exportOptionsSpinner"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/exportDocumentEditText"
        android:layout_gravity="center_horizontal"
        android:hint="email address" />

    <Button
        android:layout_width="334dp"
        android:layout_height="50dp"
        android:id="@+id/exportDocumentSendButton"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/dark_grey_rounded_corners"
        android:text="Send"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="0.03"
        android:scaleType="fitCenter" />

</LinearLayout>