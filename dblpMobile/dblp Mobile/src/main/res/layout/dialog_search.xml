<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:weightSum="1"
    android:background="@drawable/grey_rounded_corners">>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Search By Author"
        android:id="@+id/textView"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_gravity="center_horizontal"
        android:src="@android:drawable/ic_menu_search"
        android:background="#505b62" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/authorNameText"
        android:hint="author name" />

    <Button
        android:layout_width="334dp"
        android:layout_height="50dp"
        android:id="@+id/dialogAuthorButton"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/dark_grey_rounded_corners"
        android:text="GO!"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="0.03"
        android:textColor="#ffffff" />
</LinearLayout>